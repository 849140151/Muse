<UserControl x:Class="Muse.UI.View.PlayBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="500"
             Background="Transparent">
    <Grid>
        <Border Background="#46a9e5" CornerRadius="0,0,20,20" Margin="0"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBox Text="{Binding SongTitle}" Margin="2" Width="100" Height="20" FontSize="15"/>
                <TextBox Text="{Binding SongPerformer}" Margin="2" Width="150" Height="20" FontSize="15"/>
            </StackPanel>
            <Button Content="Play" Command="{Binding PlayCommand}"
                    Width="150" Height="30" Margin="5"/>
            <Button Content="Pause" Command="{Binding PauseCommand}"
                    Width="150" Height="30" Margin="5"/>
            <Button Content="Stop" Command="{Binding StopCommand}"
                    Width="150" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
